---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logo from "../assets/panino-nobg.png";
import Button from "../components/Button";
import {
  ClipboardList,
  Menu,
  MapPin,
  CookingPot,
  Sandwich,
} from "lucide-react";
import HomeFlavorText from "../components/HomeFlavorText.astro";
---

<Layout>
  <div class="min-h-screen flex flex-col w-full">
    <div
      class="w-full flex flex-col md:p-16 md:pt-32 flex-grow justify-center items-center"
    >
      <section
        class="h-screen md:h-fit flex flex-col-reverse w-full md:flex-row md:w-[85%] items-center justify-center md:gap-7 p-2 mobile-landscape:flex-row"
      >
        <div class="flex flex-col gap-6 md:w-1/2">
          <p
            class="text-3xl text-center md:text-left md:text-6xl lg:text-7xl font-bold fade-up"
          >
            Tuscan Style Foccacia Sandwiches
          </p>
          <p
            class="text-lg text-center md:text-xl lg:text-2xl md:text-left fade-up mobile-landscape:text-base"
          >
            Get a taste of traditional Italian PANINO, a new fast casual
            focaccia sandwich shop boasting delicious homemade favourites
            perfect for a quick and hearty bite to go.
          </p>

          <div class="flex gap-4 justify-center md:justify-start fade-up">
            <Button>
              <Menu />
              Order Now
            </Button>

            <Button type="secondary">
              <MapPin />
              Get Directions
            </Button>
          </div>
        </div>

        <div
          class="image-container aspect-square w-full md:w-1/3 rounded-full p-6"
        >
          <Image
            src={logo}
            alt="Panino logo"
            class="w-full h-full object-cover"
          />
        </div>
      </section>
    </div>

    <div class="w-full flex flex-col items-center mobile-landscape:h-screen">
      <section
        class="will-change-transform flex md:flex-row mobile-landscape:flex-row flex-col items-center w-full justify-evenly gap-6 bg-forest text-peach h-full md:p-7 p-6 pt-8 flavor-text-container"
      >
        <HomeFlavorText
          Icon={ClipboardList}
          title="Fresh Daily Menu"
          subtitle="Focaccia sandwiches made fresh every day, using local ingredients and inspired by Tuscan traditions."
        />
        <HomeFlavorText
          Icon={Sandwich}
          title="Signature Sandwiches"
          subtitle="Enjoy signature focaccia sandwiches like the 'Lucky Lou' Romano with artisan Italian meats (salami, prosciutto, mortadella) or a vegetarian option with grilled portabella mushrooms, aubergine, courgette, and goat's cheeseâ€”all served on homemade focaccia."
        />
        <HomeFlavorText
          Icon={CookingPot}
          title="Crafted with Care"
          subtitle="Bringing the art of Italian-inspired breadmaking to your table, served quickly and with love."
        />
      </section>
    </div>
  </div>
</Layout>

<script>
  import { animateFadeUp, animateLogo, animateTranslateY } from "../animations";

  animateFadeUp(".fade-up", 20, {
    staggerChildren: 0.35,
  });
  animateLogo();

  animateTranslateY(".flavor-text-container", 50, {
    duration: 0.6,
  });

  animateFadeUp(".flavor-text", 20, {
    staggerChildren: 0.2,
    delay: 0.6,
  });
</script>
