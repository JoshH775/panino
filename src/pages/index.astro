---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets'
import logo from '../assets/panino-nobg.png';
import Button from '../components/Button';
import { Menu, MapPin } from 'lucide-react';

// use dvw for image

---

<Layout>

	
	<div class="bg-forest text-peach w-full flex flex-col items-center p-16 pt-32">
		<section class="flex flex-col w-3/4 items-center justify-center gap-7">
			<p class="text-6xl font-bold text-center fade-up">Tuscan Style Foccacia Sandwiches</p>
			<p class="text-xl text-center fade-up">Experience authentic Italian flavors with our handcrafted focaccia sandwiches, made fresh daily using traditional Tuscan recipes.</p>
	
			<div class="image-container aspect-square  w-[20dvw] rounded-full bg-peach p-6">
				<Image src={logo} alt="Panino logo" class='w-full h-full object-cover'/>
			</div>

			<div class="flex gap-4 fade-up">
				<Button>
					<Menu />
					Order Now
				</Button>

				<Button type='secondary'>
					<MapPin />
					Get Directions	
				</Button>

			</div>

		</section>

	</div>

		<div class="w-full flex flex-col items-center p-16">
		<section class="flex flex-col w-4/5 items-center justify-center gap-6">
			<p class="text-4xl font-bold text-center">Our Menu</p>
			<p class="text-xl text-center">Choose from a variety of delicious sandwiches, salads, and sides, all made with the freshest ingredients and served with a smile.</p>
		</section>
		</div>


	</div>





</Layout>



<script>
import { animateFadeUp, animateLogo } from "../animations";

	const fadeUpElements = document.querySelectorAll('.fade-up');

	animateFadeUp(fadeUpElements, 20, {
		staggerChildren: 0.35,
	});
	animateLogo()


</script>
